@model BugTracker.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Company</h4>
<hr />


<div class="row gx-5">
    <div class="col mb-5 mt-3">
        <div class="card h-100 card-raised bg-white text-dark">
            <div class="card-header bg-primary px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h5 class="text-white">Company</h5>
                    </div>
                </div>
            </div>
            <div class="card-body px-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-floating mb-3">
                        <input asp-for="Name" id="floatingSelect" class="form-control" />
                        <label asp-for="Name" for="floatingSelect" class="form-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" rows="8" placeholder="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Save" class="btn btn-raised-info mb-3">
                            <div class="fst-button">
                                Save
                            </div>
                            <i class="material-icons icon-sm ms-1">chevron_right</i>
                        </button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Details" asp-controller="Companies" asp-route-id="@Model.Id" class="btn btn-outline-info">
        <div class="fst-button">
            Back to Company
        </div>
        <i class="material-icons icon-sm ms-1">chevron_right</i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
