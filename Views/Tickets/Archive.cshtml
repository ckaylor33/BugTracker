@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Archive";
}

<h1>Archive</h1>

<h4 class="text-muted">Are you sure you want to archive this ticket?</h4>

<hr/>

<div class="row gx-5">
    <div class="col mb-5 mt-3">
        <div class="card h-100 card-raised bg-white text-dark">
            <div class="card-header bg-primary px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h5 class="text-white">Ticket</h5>
                    </div>
                </div>
            </div>
            <div class="card-body px-4">
                <hr />
                <ul class="list-group list-group-flush mb-0 pb-0">
                    <li class="list-group-item"><strong>Title: </strong><span class="">@Html.DisplayFor(model => model.Title)</span></li>
                    <li class="list-group-item"><strong>Description: </strong><span class="">@Html.DisplayFor(model => model.Description)</span></li>
                    <li class="list-group-item"><strong>Created: </strong><span class="">@Html.DisplayFor(model => model.Created)</span></li>
                    <li class="list-group-item"><strong>Updated: </strong><span class="">@Html.DisplayFor(model => model.Updated)</span></li>
                    <li class="list-group-item"><strong>Project Name: </strong><span class="">@Html.DisplayFor(model => model.Project.Name)</span></li>
                    <li class="list-group-item"><strong>Ticket Type: </strong><span class="">@Html.DisplayFor(model => model.TicketType.Name)</span></li>
                    <li class="list-group-item"><strong>Ticket Status: </strong><span class="">@Html.DisplayFor(model => model.TicketStatus.Name)</span></li>
                    <li class="list-group-item"><strong>Ticket Priority: </strong><span class="">@Html.DisplayFor(model => model.TicketPriority.Name)</span></li>
                    <li class="list-group-item"><strong>Ticket Owner: </strong><span class="">@Html.DisplayFor(model => model.OwnerUser.FullName)</span></li>
                    <li class="list-group-item"><strong>Ticket Developer: </strong><span class="">@Html.DisplayFor(model => model.DeveloperUser.FullName)</span></li>
                </ul>
                <hr />
                <form asp-action="Archive">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Archive" class="btn btn-danger" />
                </form>
            </div>

        </div>
        <a class="btn-outline-info btn mt-3" asp-action="AllTickets">All Tickets</a>
    </div>
</div>


