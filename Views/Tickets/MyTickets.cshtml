@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
}

<h1>My Tickets</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>

<div class="row gx-5">
    <div class="col-lg-12 mb-4">
        <!-- Table -->
        <div class="card card-raised mb-5">
            <div class="card-header bg-primary text-white px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-4">
                        <h2 class="card-title text-white mb-0">My Tickets</h2>
                        <div class="card-subtitle">Access Below</div>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <table class="table" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketPriority)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(d => d.Created))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary m-1" asp-action="Edit" asp-controller="Tickets" asp-route-id="@item.Id"><span class="material-icons">edit</span></a>
                                    <a class="btn btn-sm btn-outline-info m-1" asp-action="Details" asp-controller="Tickets" asp-route-id="@item.Id"><span class="material-icons">description</span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- Load Simple DataTables Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/js/datatables/datatables-simple-demo.js"></script>
    }