@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />


<!-- Main page content-->
<main>
    <!-- Profile content row-->
    <div class="row gx-5">
        <div class="col-12">
            <!-- Account details card-->
            <div class="card card-raised mb-5 mt-2">
                <div class="card-header bg-primary text-white px-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-4">
                            <div class="card-title">Create a Ticket</div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" />
                            <label asp-for="Title" class="form-label"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" id="floatingSelect" class="form-select">
                                <option></option>
                            </select>
                            <label asp-for="ProjectId" for="floatingSelect"></label>
                        </div>
                        <div class="mb-3 form-floating">
                            <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId" id="floatingSelect" class="form-select">
                                <option></option>
                            </select>
                            <label asp-for="TicketTypeId" for="floatingSelect"></label>
                        </div>
                        <div class="mb-3 form-floating">
                            <select asp-for="TicketPriorityId" class="form-control" asp-items="ViewBag.TicketPriorityId" id="floatingSelect" class="form-select">
                                <option></option>
                            </select>
                            <label asp-for="TicketPriorityId" for="floatingSelect"></label>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="Create" class="btn btn-raised-info">
                                <div class="fst-button">
                                    Create
                                </div>
                                <i class="material-icons icon-sm ms-1">chevron_right</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<div>
    <a class="btn btn-outline-info" asp-action="AllTickets">
        <div class="fst-button">
            All Tickets
        </div>
        <i class="material-icons icon-sm ms-1">chevron_right</i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        //Default font size but not for placeholder...
        $('#Description').summernote({
            placeholder: "Ticket Description",
        });
    </script>
    }